<% provide(:title, "#{@post.category.name} - #{@post.title}") %>
<% provide(:description, "#{@post.category.name} - #{@post.title} : #{@post.description}") %>
<div class="row">

  <div class="small-10 small-centered columns show-post">
    <div class="post-title-desc">
      <h1 class="post-title-text"><%= @post.title %></h1>
      <p class="description" ><%= @post.description %></p>
    </div>
    <div class="article-body">
      <% if !@post.articles.blank? %>
      <% @post.articles.each do |article| %>
        <h4 class="art-title"><%= article.title%></h4>
        <div class="art-body-text big show-for-medium-up">
          <%=render text: article.body.html_safe %>
        </div>
        <div class="art-body-text small show-for-small-only">
          <%=render text: article.body.html_safe %>
        </div>
        <% end %>
        <% else %>
        <%= image_tag("{@post.title}") %>
        <% end %>
    </div>
  </div>
</div>
